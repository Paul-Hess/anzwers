<h4 class="question-header">{{question.query}}</h4>
<h5 class="question-notes">{{question.notes}}</h5>
<p class="question-author">{{question.author}}</p>
<p class="question-votes">{{question.voteTally}}</p>

<div class="buttons">

	<div class="vote">
		<p>vote: </p>
		<button  {{action "vote" "up" question}}>up</button>
		<button {{action "vote" "down" question}}>down</button>
	</div>

	<div class="update-question">
		<p>edit:</p>
		{{update-question question=question update="update"}}
	</div>
	
	<div class="delete">
		<p>delete: </p> 
		<button {{action 'confirm' "yes"}}>question</button>
	</div>

	<div class="new-answer">
		<p>answer this:</p>
		{{new-answer question=question saveAnswer="saveAnswer" }}
	</div>

	{{#if hiddenConfirm}}
		<div class="confirm">
			<h3> Are you sure you want to permanently delete this question?</h3>
			<button {{action 'delete' question}}>yes</button>
			<button {{action 'confirm' false}}>no</button>
		</div>
	{{/if}}
	
</div>
	

